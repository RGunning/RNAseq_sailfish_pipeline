bl6fix.once [% software.fasta_name_strip %] -i [% datasource.Sailfish %]/../transcriptomes/Mus_musculus.GRCm38.cdna.all.ERCC.fa -o [% bl6fix.file %]


castfix.once [% software.fasta_name_strip %] -i [% datasource.Sailfish %]/../transcriptomes/CASTEiJ_transcriptome70.ercc.fa -o [% castfix.file %]

sailfishIndexBL6.once
	mkdir -p [% datasource.Sailfish %]/Indexes/B/transcriptome/;
	rm -R [% datasource.Sailfish %]/Indexes/B/transcriptome/*;
	salmon --no-version-check index -t [% bl6fix.file %] -p 24  -i [% datasource.Sailfish %]/Indexes/B/transcriptome/;
	rm [% bl6fix.file %]; touch [% sailfishIndexBL6.touch %]
sailfishIndexBL6.mem 7500
sailfishIndexBL6.cores 24

sailfishIndexCast.once ls * | grep -v err | xargs rm -rf;
	mkdir -p [% datasource.Sailfish %]/Indexes/C/transcriptome/;
	rm -R [% datasource.Sailfish %]/Indexes/C/transcriptome/*;
	salmon --no-version-check index -t [% castfix.file %] -p 32 -i [% datasource.Sailfish %]/Indexes/C/transcriptome/;
	rm [% castfix.file %];touch [% sailfishIndexCast.touch %]
sailfishIndexCast.mem 7500
sailfishIndexCast.cores 32

